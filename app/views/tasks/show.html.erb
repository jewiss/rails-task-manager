<h1><%= @task.title.capitalize %></h1>

<%= link_to 'Update the task', edit_task_path %>

<ul>
  <li> <%= @task.details %></li>
  <li> <% if @task.completed%>
    <%= '☑︎' %>
    <% else %>
    <%= '☐' %>
    <% end %>
    The task is <% if @task.completed%>
    <%= 'completed' %>
    <% else %>
    <%= 'not completed yet' %>
    <% end %>
  </li>
</ul>

<%= link_to 'Back to list', tasks_path %>
