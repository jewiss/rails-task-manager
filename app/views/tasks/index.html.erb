<h1>All Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li> <% if task.completed %>
    <%= '☑︎' %>
    <% else %>
    <%= '☐' %>
    <% end %>
    <%= link_to "#{task.title.capitalize}", task_path(task)%></li>
    <%= link_to "🗑", task_path(task), method: :delete, data: {confirm: "Are you sure ?"} %>
  <% end %>
</ul>
<%= link_to 'Add new task', new_task_path%>
